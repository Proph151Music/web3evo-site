{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "nodemon",
    "lint:ts": "tsc --noEmit",
    "build": "rm -rf ./dist && tsup ./src --format cjs",
    "start": "node ./dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "dotenv -e .env.local -e .env -- prisma migrate dev",
    "prisma:deploy": "dotenv -e .env.local -e .env -- prisma migrate deploy",
    "prisma:seed": "dotenv -e .env.local -e .env -- prisma db seed",
    "prisma:studio": "dotenv -e .env.local -e .env -- prisma studio",
    "prisma:reset": "dotenv -e .env.local -e .env -- prisma migrate reset"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "@stardust-collective/dag4": "^2.2.0",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.3",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "validator": "^13.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.10",
    "@types/nodemailer": "^6.4.14",
    "@types/validator": "^13.11.6",
    "dotenv-cli": "^7.3.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.5.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "./src",
      ".env",
      ".env.local"
    ],
    "exec": "ts-node -r tsconfig-paths/register --transpile-only ./src/server.ts",
    "ext": "ts, js"
  },
  "engines": {
    "npm": ">=9.0.0",
    "node": ">=18.0.0"
  }
}
